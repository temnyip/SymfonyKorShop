{% extends 'categories/base.html.twig' %}
{% block body %}
    <a href="{{ path('home') }}">назад</a><br>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
        <table class="table table-condensed table-bordered table-hover" style="width: auto">
            <tr>
                <th>Категория (посмотреть товар в БД)</th>
                <th>URL магазина</th>
                <th>Статус в БД</th>
            </tr>
            {% for category in categories %}
                <tr>
                    <td><a href="{{ path('show_id',{'id':category.id} ) }}">{{ category.title }}</a></td>
                    <td><a href="{{ category.uri }}">{{ category.uri }}</a></td>
                    <td>{{ category.status }}</td>
                </tr>
            {% endfor %}
        </table>
{% endblock %}